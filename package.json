{
  "name": "ads-api",
  "version": "1.0.0",
  "description": "Node.js + TypeScript API with JWT auth, admin & ads management, file uploads, and MySQL via db-migrate.",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc && node dist/app.js",
    "start": "npm run build && dist/app.js",
    "migrate": "db-migrate up",
    "migrate:create": "db-migrate create",
    "migrate:down": "db-migrate down",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "mysql",
    "jwt",
    "api",
    "rest",
    "admin",
    "ads"
  ],
  "author": {
    "name": "Absallam",
    "email": "absallam1999@gmail.com",
    "url": "https://github.com/absallam1999"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/absallam1999/ads-api.git"
  },
  "bugs": {
    "url": "https://github.com/absallam1999/ads-api/issues"
  },
  "homepage": "https://github.com/absallam1999/ads-api#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "db-migrate": "^0.11.14",
    "db-migrate-mysql": "^2.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/app.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
